library(ggplot2)
library(canlang)
library(dplyr)

head(can_lang)

can_lang %>% 
    ggplot(aes(x = most_at_work, y = mother_tongue)) + 
        geom_point()

can_lang %>% 
    arrange(desc(mother_tongue)) %>% 
    head(20)

can_lang %>% 
    filter(stringr::str_detect(language, "languages"))

can_lang %>% 
    filter(category == "Non-Official & Non-Aboriginal") %>% 
    arrange(desc(mother_tongue))

can_lang %>% 
    filter(category == "Non-Official & Non-Aboriginal") %>% 
    ggplot(aes(x = most_at_work, y = mother_tongue)) + 
        geom_point()



can_lang %>% 
    filter(category == "Aboriginal languages") %>% 
    ggplot(aes(x = most_at_home, y = mother_tongue)) + 
    geom_point()

can_lang %>% 
    filter(category == "Aboriginal languages") %>% 
    arrange(desc(mother_tongue))
